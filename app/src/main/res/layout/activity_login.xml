<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FCF0C8"
    android:orientation="vertical">
    //login
    <TextView
        android:id="@+id/tv_lg_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:fontFeatureSettings="doris"
        android:gravity="center_horizontal|center_vertical"
        android:text="Login"
        android:textColor="#9E272F"
        android:textSize="40sp"
        android:textStyle="bold" />
    //username

    <EditText
        android:id="@+id/et_lg_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="30dp"
        android:hint="Username"
        android:textSize="20dp" />

    //password

    <EditText
        android:id="@+id/et_lg_pass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="330dp"
        android:layout_marginRight="30dp"
        android:hint="Password"
        android:textSize="20dp"
        android:inputType="textPassword"/>

    //button

    <Button
        android:id="@+id/btn_lg_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="30dp"
        android:text="Login"
        app:backgroundTint="#9A3B34" />

    <Button
        android:id="@+id/btn_lg_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="450dp"
        android:text="Register"
        app:backgroundTint="#888282"
        app:iconTint="#A18B8B" />
</RelativeLayout>
